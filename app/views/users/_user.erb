<%= div_for user do %>
    <tr>
      <td><img src="http://www.gravatar.com/avatar/<%=Digest::MD5.hexdigest(user.email.downcase)%>?s=50" /></td>
      <td><%= link_to user.name, user, "data-no-turbolink" => "true" %></td>
      <td><%= Translation.where(user_id: user.id).count %></td>
      <td><%= user.total_score %></td>
    </tr>
<% end %>
