<%= div_for translation do %>

	<table class = "table">
		<tbody>
			<tr class="success">
				<td>
    				<h3><%= translation.value %></h3>
    				<p>Score: <span><%= translation.score %></span></p>
                    <p>
                      <%= link_to 'Up', vote_up_translation_path(translation), method: :put, remote: true %> |
                      <%= link_to 'Down', vote_down_translation_path(translation), method: :put, remote: true %>
                    </p>
    			</td>
    		</tr>
    	</tbody>
    </table>
<% end %>